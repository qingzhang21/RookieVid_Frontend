{"ast":null,"code":"import \"core-js/modules/es.array.for-each.js\";\nimport \"core-js/modules/es.object.to-string.js\";\nimport \"core-js/modules/web.dom-collections.for-each.js\";\nimport axios from 'axios';\nexport default {\n  data: function data() {\n    return {\n      videos: [\"\"]\n    };\n  },\n  created: function created() {\n    this.getData('娱乐');\n  },\n  methods: {\n    getData: function getData(text) {\n      var _this = this;\n      axios.get('/videos/get_video_by_label', {\n        params: {\n          label: text,\n          num: -1\n        }\n      }).then(function (response) {\n        console.log(response.data);\n        response.data.video.forEach(function (video, index) {\n          // this.videos[index]=video;\n          _this.$set(_this.videos, index, video);\n        });\n      })[\"catch\"](function (error) {\n        console.log(error);\n      });\n    }\n  }\n};","map":{"version":3,"names":["axios","data","videos","created","getData","methods","text","_this","get","params","label","num","then","response","console","log","video","forEach","index","$set","error"],"sources":["src/views/Recreation.vue"],"sourcesContent":["<template>\n    <div class=\"recreation\">\n      <div class=\"top-carousel\">\n        <el-carousel :interval=\"4000\" type=\"card\" height=\"400px\">\n          <el-carousel-item v-for=\"(video,index) in this.videos\" :key=\"index\">\n            <img class=\"top-img\" :src=\"video.cover_url\">\n          </el-carousel-item>\n\n        </el-carousel>\n\n      </div>\n      <div class=\"recommend-container\">\n        <div v-for=\"(video,index) in this.videos\" :key=\"index\" class=\"recommend-item\">\n          <router-link :to=\"'/view'+video.video_id\">\n           <img class=\"recommend-img\" :src=\"video.cover_url\">\n          </router-link>\n          <div class=\"overlay\">\n            <span class=\"play-info\">\n              <img class=\"play-icon\" src=\"../assets/display/play_circle_outline.svg\">\n         